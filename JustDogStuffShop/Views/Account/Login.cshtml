@model LoginViewModel

@{ 
	ViewBag.Title = "Login";
}

<div id="login">
	<h2>Log in to place an order!</h2>

	<form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
		<hr />
		<h4>Please enter your username and password</h4>
		<input type="hidden" asp-for="ReturnUrl" />
		<div asp-validation-summary="All" class="invalid"></div>

		<div class="form-group">
			<label asp-for="UserName" class="col-sm-2 control-label"></label>
			<div class="col-sm-9">
				<input asp-for="UserName" class="form-control" />
				@*<span asp-validation-for="UserName" class="invalid"></span>*@
			</div>
		</div>

		<div class="form-group">
			<label asp-for="Password" class="col-sm-2 control-label"></label>
			<div class="col-sm-9">
				<input asp-for="Password" class="form-control" />
				@*<span asp-validation-for="Password" class="invalid"></span>*@
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-8 col-sm-3">
				<input type="submit" class="btn btn-primary" value="Log In" />
			</div>
		</div>
	</form>
</div>