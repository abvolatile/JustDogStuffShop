@model LoginViewModel

@{
	ViewBag.Title = "Register";
}
<div id="register">
	<h2>Register for a FREE account with Just Dog Stuff Shop!</h2>

	<form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
		<hr />
		<h4>Create an account to order some Dog Stuff!</h4>
		<p class="text-center">*passwords must contain at least one uppercase letter, one digit, and one non-alphanumeric character*</p>
		<div asp-validation-summary="All" class="invalid"></div>

		<div class="form-group">
			<label asp-for="UserName" class="col-sm-2 control-label"></label>
			<div class="col-sm-9">
				<input asp-for="UserName" class="form-control" />
				@*<span asp-validation-for="UserName" class="invalid"></span>*@
			</div>
		</div>

		<div class="form-group">
			<label asp-for="Password" class="col-sm-2 control-label"></label>
			<div class="col-sm-9">
				<input asp-for="Password" class="form-control" />
				@*<span asp-validation-for="Password" class="invalid"></span>*@
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-8 col-sm-3">
				<input type="submit" class="btn btn-primary" value="Register" />
			</div>
		</div>
	</form>
</div>