@model Product

<div class="col-sm-4">
	<div class="thumbnail">
		<img class="listImg" src="@Model.ImageThumbnailUrl" alt="@Model.Name" />
		<div class="caption">
			<h3 class="pull-right">@Model.Price.ToString("C")</h3>
			<h3>
				<a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId">@Model.Name</a>
			</h3>
			<p>@Model.ShortDescription</p>
		</div>
		<div class="addToCart">
			<p class="button">
				<a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@Model.ProductId">Add to Cart</a>
			</p>
		</div>
	</div>
</div>